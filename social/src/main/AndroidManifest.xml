<!-- Social module manifest file. -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mindstix.baseline.social" >

    <!-- Application permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:name="SocialApplication">

        <!-- Metadata for Facebook Login. -->
        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <activity android:name=".SocialActivity"
            android:theme="@style/Theme.Transparent"/>

        <!-- FacebookActivity. -->
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <!-- Activity and Intent Filter for Chrome Custom Tabs. -->
        <activity android:name="com.facebook.CustomTabActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>

        </activity>

    </application>

</manifest>